# Variables d'environnement pour la PRODUCTION
# ⚠️ IMPORTANT: Changez TOUTES ces valeurs en production !

# =============================================================================
# Configuration Flask
# =============================================================================
FLASK_ENV=production
ENV=production
DEBUG=false

# =============================================================================
# Sécurité - Clés secrètes (OBLIGATOIRE à changer)
# =============================================================================
# Générez des clés sécurisées avec : openssl rand -base64 32
SECRET_KEY=your-super-secret-flask-key-change-this-in-production-32-chars-min
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-use-strong-key
ENCRYPTION_KEY=your-32-byte-encryption-key-changethis!

# =============================================================================
# Base de données Production
# =============================================================================
DATABASE_URL=postgresql://prod_user:secure_prod_password_2024@prod_db_host:5432/prod_password_manager

# =============================================================================
# Configuration de sécurité renforcée
# =============================================================================
BCRYPT_ROUNDS=14
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=1800

# =============================================================================
# Rate Limiting Production (Strict)
# =============================================================================
RATE_LIMIT_LOGIN_ATTEMPTS=3
RATE_LIMIT_WINDOW=300
RATE_LIMIT_BLOCK_DURATION=900

# =============================================================================
# Clé d'urgence pour déblocage (optionnel)
# =============================================================================
EMERGENCY_RESET_KEY=your-emergency-key-for-rate-limit-reset-only-use-if-needed

# =============================================================================
# Logging et Monitoring
# =============================================================================
LOG_LEVEL=WARNING
ENABLE_AUDIT_LOGS=true

# =============================================================================
# CORS Production (Domaines autorisés)
# =============================================================================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# Configuration SSL/TLS (si applicable)
# =============================================================================
FORCE_SSL=true
SSL_DISABLE=false