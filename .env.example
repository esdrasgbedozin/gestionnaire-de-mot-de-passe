# Variables d'environnement pour le développement
# Copiez ce fichier vers .env et modifiez les valeurs

# Base de données
DB_HOST=localhost
DB_PORT=5432
DB_NAME=password_manager
DB_USER=admin
DB_PASSWORD=secure_password_2024

# Backend Flask
FLASK_ENV=development
FLASK_DEBUG=True
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production_with_64_chars_minimum
ENCRYPTION_KEY=your_32_byte_encryption_key_change_me_in_production_exactly_32_chars

# Frontend
